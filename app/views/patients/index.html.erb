<div class="page-header">
  <h1>
    Patients
    <a href="/patients/new" class="btn btn-lg btn-success">New Patient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Phone number</th>
        <th>Patient image</th>
        <th>Actions</th>
      </tr>

      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.patient_image %></td>
        <td>
          <a href="/patients/<%= patient.id %>" class="btn btn-primary">Show</a>
          <a href="/patients/<%= patient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_patient/<%= patient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
