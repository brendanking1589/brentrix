<!-- Validation failure messages -->
<% if @patient.errors.any? %>
  <% @patient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Patient #<%= @patient.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_patient/<%= @patient.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @patient.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @patient.last_name %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @patient.address %>">
      </div>

      <!-- Label and input for phone_number -->
      <div class="form-group">
        <label for="phone_number" class="control-label">
          Phone number
        </label>

        <input type="text" id="phone_number" name="phone_number" placeholder="Phone number" class="form-control" value="<%= @patient.phone_number %>">
      </div>

      <!-- Label and input for patient_image -->
      <div class="form-group">
        <label for="patient_image" class="control-label">
          Patient image
        </label>

        <%= cl_image_tag(@patient.patient_image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="patient_image" name="patient_image" class="form-control">
      </div>

      <button class="btn btn-warning">
        Update Patient
      </button>
      or
      <a href="/patients/<%= @patient.id %>">Cancel</a>
    </form>
  </div>
</div>
