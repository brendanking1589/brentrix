<div class="page-header">
  <h1>
    Procedures
    <a href="/procedures/new" class="btn btn-lg btn-success">New Procedure</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "procedures_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :amount, "Amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :amount_gteq, :class => "form-control", :placeholder => "Amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :amount_lteq, :class => "form-control", :placeholder => "Amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :patient_first_name_cont, "Patient first_name contains" %>
      <%= f.text_field :patient_first_name_cont, :class => "form-control", :placeholder => "Patient first_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :provider_provider_code_string_cont, "Provider provider_code_string contains" %>
      <%= f.text_field :provider_provider_code_string_cont, :class => "form-control", :placeholder => "Provider provider_code_string contains" %>
    </div>

<div class="form-group">
      <%= f.label :treatment_treatment_code_cont, "Treatment treatment_code contains" %>
      <%= f.text_field :treatment_treatment_code_cont, :class => "form-control", :placeholder => "Treatment treatment_code contains" %>
    </div>

<div class="form-group">
  <%= f.label :amount, "Payment Amount" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :payments_amount_gteq, :class => "form-control", :placeholder => "Payment Amount greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :payments_amount_lteq, :class => "form-control", :placeholder => "Payment Amount less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :doctor_first_name_cont, "Doctor first_name contains" %>
      <%= f.text_field :doctor_first_name_cont, :class => "form-control", :placeholder => "Doctor first_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :location_city_cont, "Location city contains" %>
      <%= f.text_field :location_city_cont, :class => "form-control", :placeholder => "Location city contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/procedures" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#procedures_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Provider</th>
        <th>Treatment</th>
        <th>Patient</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @procedures.each do |procedure| %>
      <tr>
        <td>
          <% if procedure.provider.present? %>
            <a href="/providers/<%= procedure.provider.id %>">
              <%= procedure.provider.provider_code_string %>
            </a>
          <% end %>
        </td>
        <td>
          <% if procedure.treatment.present? %>
            <a href="/treatments/<%= procedure.treatment.id %>">
              <%= procedure.treatment.treatment_code %>
            </a>
          <% end %>
        </td>
        <td>
          <% if procedure.patient.present? %>
            <a href="/patients/<%= procedure.patient.id %>">
              <%= procedure.patient.first_name %>
            </a>
          <% end %>
        </td>
        <td><%= procedure.amount %></td>
        <td><%= procedure.date %></td>
        <td>
          <a href="/procedures/<%= procedure.id %>" class="btn btn-primary">Show</a>
          <a href="/procedures/<%= procedure.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_procedure/<%= procedure.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @procedures, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
